<% layout('/layouts/boilerplate') %>
<h1>Your Friendz</h1>
<hr />

<h3>Approve or Deny</h3>
<% for(let yourRequests of yourRequest){ %>
<h4><%= yourRequests.username %></h4>
<a
    class="btn btn-primary"
    type="submit"
    value="0"
    href="/friend/<%= yourRequests.id%>"
    >Approve Request</a
>
<!-- <a
    class="btn btn-primary"
    type="submit"
    name="deny"
    value="<=yourRequests._id%>"
    >Deny Request</a
> -->
<form
    class="d-inline"
    action="/yourFriends/<%=yourRequests._id%>?_method=PUT"
    method="POST"
>
    <button class="btn btn-danger btn-outline-dark">Deny Request</button>
</form>
<% } %>
<hr />
<h3>Your Pending Requests</h3>
<% for(let showPendings of showPending){ %>
<h4><%= showPendings.username %></h4>
<form
    class="d-inline"
    action="/yourFriends/<%=showPendings._id%>?_method=PUT"
    method="POST"
>
    <button class="btn btn-danger btn-outline-dark">Un-request</button>
</form>
<% } %>
