<% layout('/layouts/boilerplate') %>
<h2>Make Card</h2>
<form action="/cards" method="POST" class="validate-form" nonvalidate>
    <div>
        <label for="title">Title</label>
        <input
            name="newCard[title]"
            class="form-control"
            type="text"
            id="makeTitle"
            placeholder="Title"
            required
        />
        <div class="valid-feedback">Good Title</div>
    </div>
    <div>
        <label for="price">Price</label>
        <input
            name="newCard[price]"
            class="form-control"
            type="number"
            id="makePrice"
            placeholder="Price"
            required
        />
        <div class="valid-feedback">Good Price</div>
    </div>
    <div>
        <label for="title">Description</label>
        <textarea
            name="newCard[description]"
            class="form-control"
            type="text"
            id="makeDescription"
            placeholder="Description"
            required
        ></textarea>
        <div class="valid-feedback">Good Description</div>
    </div>
    <button>Submit</button>
</form>
<a href="/cards">All Cards</a>
