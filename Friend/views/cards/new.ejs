<h2>Make Card</h2>
<form action="/cards" method="POST">
    <div>
        <label for="title">Title</label>
        <input
            name="newCard[title]"
            class="form-control"
            type="text"
            id="makeTitle"
            placeholder="Title"
            required
        />
    </div>
    <div>
        <label for="price">Price</label>
        <input
            name="newCard[price]"
            class="form-control"
            type="number"
            id="makePrice"
            placeholder="Price"
            required
        />
    </div>
    <div>
        <label for="title">Description</label>
        <textarea
            name="newCard[description]"
            class="form-control"
            type="text"
            id="makeDescription"
            placeholder="Description"
            required
        ></textarea>
    </div>
    <button>Submit</button>
</form>
<a href="/cards">All Cards</a>
