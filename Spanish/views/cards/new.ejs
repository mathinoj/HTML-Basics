<% layout('/layouts/boilerplate')%>
<form action="/cards" method="POST">
    <div>
        <label for="card">Card</label>
        <input type="text" id="english" name="card[english]" />
        <input type="text" id="spanish" name="card[spanish]" />
    </div>
    <div>
        <label for="hint">Hint</label>
        <input type="text" id="hintOne" name="card[hintOne]" />
        <input type="text" id="hintTwo" name="card[hintTwo]" />
    </div>
    <button>Add Card</button>
    <div>
        <a href="/cards/">All Cards</a>
    </div>
</form>
