<% layout('/layouts/boilerplate')%>
<h1>Edit Card</h1>
<form action="/cards/<%=editCard._id%>?_method=PUT" method="POST">
    <div>
        <label for="card">Card</label>
        <input
            type="text"
            id="english"
            name="card[english]"
            value="<%=editCard.english%>"
            required
        />
        <input
            type="text"
            id="spanish"
            name="card[spanish]"
            value="<%=editCard.spanish%>"
            required
        />
        <div class="valid-feedback">Looks aight!</div>
    </div>
    <div>
        <label for="hint">Hint</label>
        <input
            type="text"
            id="hintOne"
            name="card[hintOne]"
            value="<%=editCard.hintOne%>"
            required
        />
        <input
            type="text"
            id="hintTwo"
            name="card[hintTwo]"
            value="<%=editCard.hintTwo%>"
            required
        />
        <div class="valid-feedback">Looks aight!</div>
    </div>
    <button>Update Card</button>
    <div>
        <a href="/cards/<%= editCard._id%>">Back to Card</a>
    </div>
</form>
