<% if(success && success.length) { %>
<!-- ^^^this says if success is there AND its not empty -->
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success %>
    <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
    >
        <!-- <span aria-hidden="true">&times;</span> -->
        <!-- took this out cuz it leaves a little x behind the big X, perhaps new version of bootstrap dont need it -->
    </button>
</div>

<% } %>

<!-- ///////////////////////////////////// -->

<% if(error && error.length) { %>
<!-- ^^^this says if success is there AND its not empty -->
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
    >
        <!-- <span aria-hidden="true">&times;</span> -->
        <!-- took this out cuz it leaves a little x behind the big X, perhaps new version of bootstrap dont need it -->
    </button>
</div>
<% } %>
