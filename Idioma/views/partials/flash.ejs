<% if(success && success.length) { %>
<div class="alert alert-success alert-dismissable fade show" role="alert">
    <%= success %>
    <bottom
        class="btn-close"
        type="button"
        data-dismiss="alert"
        aria-label="Close"
    >
        <span aria-hidden="true">&times;</span>
    </bottom>
</div>
<% } %>
