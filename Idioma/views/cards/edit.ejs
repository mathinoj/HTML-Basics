<% layout('/layouts/boilerplate') %>
<h1>Edit A Card</h1>
<form action="/cards/<%=editCard._id%>?_method=PUT" method="POST">
    <!-- THIS SHOULD SEND A PUT REQUEST -->
    <div>
        <label for="english">English</label>
        <!-- for in label has to match id below -->
        <textarea
            class="form-control"
            type="text"
            id="english"
            name="editCard[english]"
            placeholder="English"
            required
            value="<%=editCard.english%>"
        >
<%=editCard.english%></textarea
        >
    </div>
    <!-- How do we set the value on an input? We set the attribute called 'value' -->
    <div>
        <label for="spanish">Spanish</label>
        <textarea
            class="form-control"
            type="text"
            id="spanish"
            name="editCard[spanish]"
            placeholder="Spanish"
            required
            value="<%=editCard.spanish%>"
        >
<%=editCard.spanish%></textarea
        >
    </div>
    <div>
        <label for="hintOne">Hint One</label>
        <input
            class="form-control"
            type="text"
            id="hintOne"
            name="editCard[hintOne]"
            placeholder="Hint One"
            value="<%=editCard.hintOne%>"
            required
        />
    </div>
    <div>
        <label for="hintTwo">Hint Two</label>
        <input
            class="form-control"
            type="text"
            id="hintTwo"
            name="editCard[hintTwo]"
            placeholder="Hint Two"
            value="<%=editCard.hintTwo%>"
            required
        />
    </div>
    <div class="buttons mt-3">
        <button class="btn btn-success btn-outline-dark">Submit</button>
        <a href="/cards/<%=editCard._id%>" class="btn btn-outline-dark"
            >Back to Card</a
        >
        <a href="/cards" class="btn btn-danger btn-outline-dark">All Cards</a>
    </div>
</form>
