<% layout('/layouts/boilerplate') %>
<h1>My Cards</h1>
<div class="card-body">
            <% for(let theCards of myCards) { %>
              <% if(currentUser._id == theCards.author.id){ %>
                <div class="card mb-3" style="width: 15rem">
                  <div class="card-header">Card</div>
                  <div class="card-body">
                      <h3 class="card-text"><%= theCards.english%></h3>
                      <h6 class="card-text">Author: <%= theCards.author.username%></h6>
                      <a href="/cards/<%=theCards._id%>" class="btn btn-primary">View Card</a>
                  </div>

              </div>
              <% }} %>

              <% for(let showThems of showThem) {%>
                <!--  -->
                <% if(currentUser._id == showThems.nowUser) {%>
                <!--  -->
                <div class="card mb-3" style="width: 15rem">
                    <div class="card-header">Card</div>
                    <div class="card-body">
                        <h3 class="card-text"><%= showThems.addedCard.english%></h3>
                        <h6 class="card-text"><%= showThems.addedCard.author.username%></h6>
                        <h6 class="card-text"><%= showThems.addedCard.number%></h6>
                        <h6 class="card-text"><%= showThems.nowUser%></h6>
                        <h5 class="card-text"><%=showThems.addedCard._id%></h5>
                        <a href="/cards/<%=showThems.addedCard._id%>" class="btn btn-primary"
                            >View Card</a
                        >
                    </div>
                </div>
                <% }} %>

<% console.log('break') %>
  </div>
</div>
</div>
