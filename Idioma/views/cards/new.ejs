<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>New Card</title>
    </head>
    <body>
        <h1>Make A Card</h1>
        <form action="/cards" method="POST">
            <div>
                <label for="english">English</label>
                <!-- for in label has to match id below -->
                <textarea
                    class="form-control"
                    type="text"
                    id="english"
                    name="card[english]"
                    placeholder="English"
                    required
                ></textarea>
            </div>
            <div>
                <label for="spanish">Spanish</label>
                <textarea
                    placeholder="Spanish"
                    class="form-control"
                    type="text"
                    id="spanish"
                    name="card[spanish]"
                    required
                ></textarea>
            </div>
            <div>
                <label for="hintOne">Hint One</label>
                <input
                    class="form-control"
                    type="text"
                    id="hintOne"
                    name="card[hintOne]"
                    placeholder="Hint One"
                    required
                />
            </div>
            <div>
                <label for="hintTwo">Hint Two</label>
                <input
                    class="form-control"
                    type="text"
                    id="hintTwo"
                    name="card[hintTwo]"
                    placeholder="Hint Two"
                    required
                />
            </div>
            <button>Submit</button>
        </form>
    </body>
</html>
