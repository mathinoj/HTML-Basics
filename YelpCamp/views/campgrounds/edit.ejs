<% layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Camp</h1>
    <div class="col-6 offset-3">
        <form
            action="/campgrounds/<%=campground._id%>?_method=PUT"
            method="POST"
            novalidate
            class="validated-form"
            enctype="multipart/form-data"
        >
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input
                    class="form-control"
                    type="text"
                    id="title"
                    name="campground[title]"
                    value="<%=campground.title%>"
                    required
                />
                <!-- this [title] is done to group content together -->
                <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input
                    class="form-control"
                    type="text"
                    id="location"
                    name="campground[location]"
                    value="<%=campground.location%>"
                    required
                />
                <div class="valid-feedback">Looks Damn Decent!</div>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Add Images</label>
                <input type="file" name="image" id="image" multiple /> -->
            <!-- ^^^^^^^^^539 -->
            <!-- </div> -->

            <div class="mb-3">
                <label class="form-label" for="price">Camp Price</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="price-label">$</span>
                    </div>
                    <input
                        type="text"
                        id="price"
                        class="form-control"
                        placeholder="0.00"
                        aria-label="price"
                        aria-describedby="price-label"
                        name="campground[price]"
                        value="<%=campground.price%>"
                        required
                    />
                    <div class="valid-feedback">Looks Good!</div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description"
                    >Description URL</label
                >
                <textarea
                    class="form-control"
                    type="text"
                    id="description"
                    name="campground[description]"
                    required
                >
<%=campground.description%></textarea
                >
                <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input
                        type="file"
                        name="image"
                        class="custom-file-input"
                        id="image"
                        multiple
                    />
                    <label class="form-file-text custom-file-label" for="image"
                        >Add More Images</label
                    >
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Camp</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id%>">Back to Camps</a>
    </div>
</div>
